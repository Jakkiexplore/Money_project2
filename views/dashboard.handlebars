<div class="chart-area">
<div class="chart-section">
  <div>
    <canvas id="incomePieChart" width="400" height="400"></canvas>
  </div>
  <div>
    <canvas id="expensePieChart" width="400" height="400"></canvas>
  </div>
</div>
<div class="bar-section">
    <canvas id="barChart" width="700" height="700"></canvas>
</div>
</div>
<script>
  // Client-side Chart.js code
   document.addEventListener("DOMContentLoaded", () => {
        var ctx1 = document.getElementById("incomePieChart").getContext("2d");
        new Chart(ctx1, {
          type: "pie",
          data: {{{json incomeChartData}}},
          options: {
            plugins: {
              legend: {
                display: true,
                position: "bottom",
                labels: {
                  color: "white",
                },
              },
              title: {
                display: true,
                text: "INCOME",
                color: "white",
                font: {
                  weight: "bold",
                  size: 25,
                },
              },
            },
          },
        });     
        var ctx2 = document.getElementById("expensePieChart").getContext("2d");
        new Chart(ctx2, {
          type: "pie",
          data: {{{json expenseChartData}}},
          options: {
            plugins: {
              legend: {
                display: true,
                position: "bottom",
                labels: {
                  color: "white",
                },
              },
              title: {
                display: true,
                text: "EXPENSE",
                color: "white",
                font: {
                  weight: "bold",
                  size: 25,
                },
              },
            },
          },
        });     
        var bar = document.getElementById("barChart").getContext("2d");
        new Chart(bar, {
          type: "bar",
          data: {{{json barGraphData}}},
          options: {
            scales: {
              x: {
                ticks: {
                  color: "white", // X-axis tick color
                },
                grid: {
                  color: "white", // X-axis grid line color
                },
              },
              y: {
                beginAtZero: true,
                ticks: {
                  color: "white", // Y-axis tick color
                },
                grid: {
                  color: "white", // X-axis grid line color
                },
              },
            },
            plugins: {
              legend: {
                labels: {
                  color: "white",
                  font: {
                    weight: "bold",
                    size: 25,
                  }, // Legend text color
                },
              },
            },
          },
        });
    });
</script>