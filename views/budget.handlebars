<style>
    table {
        font-family: arial, sans-serif;
        border-collapse: collapse;
        width: 100%;
    }

    td,
    th {
        border: 1px solid #dddddd;
        text-align: left;
        padding: 8px;
    }

    tr:nth-child(even) {
        background-color: #dddddd;
    }
</style>



<table>
    <tr>
        <th>Amount</th>
        <th>Date</th>
    </tr>
    {{#each budgets as |budget|}}

    <tr>
        <td>{{budget.amount}}</td>
        <td>{{budget.budget_date}}</td>
    
    </tr>
    {{/each}}
   
</table>